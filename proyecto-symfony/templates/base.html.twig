<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            {# 472. Cargar estilos #}
            {# 474. Maquetar la cabecera y el men√∫ #}
            <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div id="header">
                <h1>Tareas Symfony</h1>
                <ul id="menu">

                    {% if app.user %}
                        {# los path son vienen de routes.yaml #}
                        <li><a href="{{ path('tasks') }}">Inicio</a></li>
                        <li><a href="{{ path('my_tasks') }}">Mis tareas</a></li>
                        <li><a href="{{ path('task_creation') }}">Crear tarea</a></li>
                        {#
                        <li class="right"><a href="">{{ app.user.name ~ ' ' ~ app.user.surname }}</a></li>
                        #}
                            
                        <li class="right"><a href="{{ path('register_detail', {'id':app.user.id}) }}">{{ app.user.name }}</a></li>
                        <li class="right"><a href="{{ path('register_edit', {'id':app.user.id}) }}">Editar usuario</a></li>
                        
                        <li class="right"><a href="{{ path('logout') }}">Cerrar sesion</a></li>
                    {% else %}
                        <li><a href="{{ path('login') }}">Login</a></li>
                        <li><a href="{{ path('register') }}">Registrarse</a></li>
                    {% endif %}

                </ul>
            </div>
            <div class="clearfix"></div>
            {#
            {% if app.user %}
                {{ dump(app.user) }}
            {% endif %}
            #}
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
